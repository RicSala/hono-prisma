{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "types": ["vitest/globals", "node"]
  },
  "include": ["src/**/*", "tests/**/*", "vitest.config.ts", "packages/**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
